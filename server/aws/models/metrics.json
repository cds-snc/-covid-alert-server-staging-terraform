{
  "type": "object",
  "title": "COVID Alert Metrics Schema Version 1.4.2",
  "required": [
    "schemaversion",
    "metricstimestamp",
    "symptomonset",
    "appversion",
    "appos",
    "payload"
  ],
  "properties": {
    "schemaversion": {
      "type": "integer",
      "minLength": 0,
      "maxLength": 5,
      "title": "Schema Version Schema",
      "default": "null"
    },
    "metricstimestamp": {
      "type": "string",
      "minLength": 0,
      "maxLength": 25,
      "title": "Metrics time stamp Schema",
      "default": "null"
    },
    "symptomonset": {
      "type": "boolean",
      "title": "Symptom on set Schema"
    },
    "appversion": {
      "type": "integer",
      "minLength": 0,
      "maxLength": 5,
      "title": "App Version Schema",
      "default": "null"
    },
    "appos": {
      "type": "string",
      "minLength": 0,
      "maxLength": 20,
      "title": "App os Schema",
      "default": "null"
    },
    "payload": {
      "type": "array",
      "title": "payload Schema",
      "default": [],
      "minItems": 1,
      "items": {
        "type": "object",
        "title": "payload Schema",
        "default": {},
        "required": [
          "identifier",
          "region",
          "timestamp"
        ],
        "properties": {
          "identifier": {
            "type": "string",
            "enum": [
              "installed",
              "exposed",
              "onetimekey",
              "onboarded",
              "frameworkStatus"
            ],
            "minLength": 1,
            "maxLength": 25,
            "title": "Identifier Schema",
            "default": "null"
          },
          "region": {
            "type": "string",
            "enum": [ "ON", "QC", "NS", "NB", "MB", "AB", "BC", "NL", "PE", "SK", "NT", "NU", "YT" ],
            "minLength": 1,
            "maxLength": 3,
            "title": "Region Schema",
            "default": "null"
          },
          "timestamp": {
            "type": "string",
            "minLength": 1,
            "maxLength": 25,
            "title": "Timestamp Schema",
            "default": "null"
          },
          "state": {
            "type": "boolean"
          },
          "pushnotificationson": {
            "type": "boolean"
          },
          "frameworkenabled": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
